<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nuevo Contacto</h3>
    </div>
    <div class="card-body">
        <form action="/contacts/new-contact" method="POST">
            <div class="form-group">
                <input type="text" name='contactName' class="form-control" placeholder="Nombre" value="{{contactName}}" autofocus>
            </div>
            <div class="form-group">
                <input type="text" name="contactLastname" class="form-control" placeholder="Apellido" value="{{contactLastname}}">
            </div>
            <div class="form-group">
                <input type="email" name="contactEmail" class="form-control" placeholder="Correo" value="{{contactEmail}}">
            </div>
            <div class="form-group">
                <input type="number" name="contactAge" class="form-control" placeholder="Edad" value="{{contactAge}}">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Agregar</button>
            </div>
        </form>
    </div>
</div>
</div>